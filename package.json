{
  "name": "okit",
  "version": "2.0.0",
  "description": "OKIT v1 - 精简版工具执行器",
  "main": "dist/main.js",
  "bin": {
    "okit": "dist/main.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-web",
    "copy-web": "mkdir -p dist/web && cp -r src/web/public dist/web/ && cp src/web/server.js dist/web/ && cp -r src/web/api dist/web/",
    "dev": "ts-node src/main.ts",
    "start": "node dist/main.js",
    "pkg": "pkg . --out-path=bin"
  },
  "keywords": [
    "cli",
    "installer",
    "project-generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.6",
    "commander": "^11.0.0",
    "execa": "^5.1.1",
    "express": "^5.2.1",
    "fs-extra": "^11.1.1",
    "kleur": "^4.1.5",
    "ora": "^5.4.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.5.0",
    "@types/prompts": "^2.4.4",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-macos-arm64",
      "node18-macos-x64"
    ],
    "outputPath": "bin"
  }
}
