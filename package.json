    "kleur": "^4.1.5",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/prompts": "^2.4.4",
    "@types/fs-extra": "^11.0.1",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": ["node18-macos-arm64", "node18-macos-x64"],
    "outputPath": "bin"
  }
